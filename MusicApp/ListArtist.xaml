<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicApp.ListArtist"
             Title="List Artists">

    <Grid RowDefinitions="auto,70*,10*" Padding="20">


        <ListView x:Name="ListAllArtist" Grid.Row="1" BackgroundColor="White"  ItemSelected="Cick_Artist">
            <ListView.ItemTemplate >
                <DataTemplate >
                    <ViewCell >
                        <StackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>


</ContentPage>

